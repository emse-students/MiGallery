{
	"name": "migallery",
	"private": true,
	"version": "0.0.1",
	"description": "MiGallery, by MiTV",
	"type": "module",
	"author": "DeMASKe",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/emse-students/MiGallery.git"
	},
	"homepage": "https://github.com/emse-students/MiGallery#readme",
	"keywords": ["sveltekit", "svelte", "vite", "bun", "gallery"],
	"files": ["build/", "src/", "README.md"],
	"engines": {
		"node": ">=18.0.0",
		"bun": "*"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deps:install": "bun install",
		"deps:install:pnpm": "pnpm install",
		"ci:install": "bun install --production",
		"ci:build": "bun install --production && npm run build",
		"start": "bun run dev",
		"package": "bun run build && bun ./scripts/pack-bun.js",
		"package:legacy": "npm run build && node -e \"require('fs').mkdirSync('build/artifacts',{ recursive: true })\" && npm pack --pack-destination build/artifacts",
		"version:show": "node -e \"console.log(require('./package.json').version)\"",
		"db:init": "node ./scripts/init-db.cjs",
		"db:backup": "node ./scripts/backup-db.cjs",
		"db:inspect": "node ./scripts/inspect-db.cjs",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:api": "node ./scripts/test-api.cjs",
		"test:api:vitest": "vitest run tests/api.test.ts",
		"test:api:full": "node scripts/test-with-server.mjs",
		"generate:secret": "node ./scripts/generate_cookie_secret.cjs",
		"generate:auth-secret": "node ./scripts/generate-auth-secret.cjs"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/better-sqlite3": "^7.6.13",
		"autoprefixer": "^10.4.22",
		"postcss": "^8.5.6",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tar": "^6.2.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@auth/core": "^0.41.1",
		"@auth/sveltekit": "^1.11.1",
		"better-sqlite3": "^12.4.1",
		"bun-types": "^1.3.2",
		"dotenv": "^17.2.3",
		"svelte-adapter-bun": "^1.0.1",
		"vitest": "^4.0.10"
	},
	"overrides": {
		"cookie": "^0.7.0"
	}
}
